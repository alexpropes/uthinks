<% if signed_in? %>
	<div class="row">
		<div class="span8">
			<h3>Recent Questions</h3>
			<%= render 'shared/recent' %>
		</div>
		<aside class="span4">
		  <section>
			<%= render 'shared/user_info' %>
		  </section>
		  <section>
			<%= render 'shared/question_form' %>
		  </section>
		</aside>
	</div>  
<% else %>
	<div class="container"> 
		<div class="hero-unit">
			<h2>
				Your opinion matters
			</h2>
			<h3>
				Ask and learn today
			</h3>
			</br>
			</br>
			<%= link_to "Sign up for free", signup_path, class: "btn btn-large btn-primary" %>
		</div>
	</div>

	<div class="row">
		<div class="span4">
			<h3 id="Ask a Questions">Ask a Question</h3>
		</div>
		<div class="span4">
			<h3 id="Write your Opinion">Write your Opinion</h3>
		</div>
		<div class="span4">
			<h3 id="Choose your Camp">Choose your Camp</h3>
		</div>
	</div>

<% end %> 